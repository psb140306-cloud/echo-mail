{
  "name": "echo-mail",
  "version": "0.1.0",
  "description": "발주 확인 자동 문자/카톡 발송 시스템",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:performance": "jest --testPathPattern=__tests__/performance --runInBand --forceExit",
    "test:performance:memory": "node --expose-gc --max-old-space-size=2048 node_modules/.bin/jest __tests__/performance/memory-leak.test.ts --runInBand --forceExit",
    "test:performance:bulk": "jest __tests__/performance/bulk-email-processing.test.ts --runInBand --forceExit",
    "test:performance:concurrency": "jest __tests__/performance/concurrency.test.ts --runInBand --forceExit",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "postinstall": "prisma generate",
    "mcp:status": "node scripts/mcp-status.js",
    "mcp:setup": "node scripts/mcp-setup.js",
    "shadcn:init": "node scripts/shadcn-init.js",
    "shadcn:add": "npx shadcn-ui@latest add",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:prod": "docker compose up -d",
    "docker:prod:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v && docker compose -f docker-compose.dev.yml down -v",
    "vercel:dev": "vercel dev",
    "vercel:deploy": "vercel --prod",
    "vercel:preview": "vercel",
    "vercel:login": "vercel login",
    "vercel:env": "vercel env",
    "vercel:setup": "node scripts/vercel-setup.js",
    "check:contrast": "tsx scripts/check-color-contrast.ts",
    "check:accessibility": "npm run check:contrast"
  },
