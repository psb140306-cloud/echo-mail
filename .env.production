# =============================================================================
# Echo Mail Production Environment Configuration
# =============================================================================

# Application Settings
NODE_ENV=production
APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://echomail.your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/echomail?schema=public&sslmode=require
REDIS_URL=redis://username:password@host:6379

# Authentication
NEXTAUTH_URL=https://echomail.your-domain.com
NEXTAUTH_SECRET=your-super-secret-nextauth-key-here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Email Configuration (IMAP for receiving)
MAIL_HOST=imap.your-domain.com
MAIL_PORT=993
MAIL_SECURE=true
MAIL_USER=order@your-domain.com
MAIL_PASSWORD=your-mail-password
MAIL_CHECK_INTERVAL=300000
MAIL_IDLE_TIMEOUT=1800000

# SMTP Configuration (for sending notifications)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your-smtp-password
SMTP_FROM=Echo Mail <noreply@your-domain.com>

# SMS Configuration (Aligo)
SMS_API_KEY=your-aligo-api-key
SMS_USER_ID=your-aligo-user-id
SMS_SENDER=010-1234-5678
SMS_TEST_MODE=false

# KakaoTalk Configuration
KAKAO_API_KEY=your-kakao-api-key
KAKAO_ADMIN_KEY=your-kakao-admin-key
KAKAO_SENDER_KEY=your-kakao-sender-key
KAKAO_TEST_MODE=false

# Payment Configuration (TossPayments)
TOSS_PAYMENTS_CLIENT_KEY=your-toss-payments-client-key
TOSS_PAYMENTS_SECRET_KEY=your-toss-payments-secret-key
TOSS_PAYMENTS_TEST_MODE=false

# Webhook Configuration
NEXT_PUBLIC_WEBHOOK_URL=https://echomail.your-domain.com/api/webhooks

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Sentry Configuration (Optional)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Cron Job Security
CRON_SECRET=your-secure-cron-secret-key

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,xlsx,xls,doc,docx,txt,csv

# Cache Configuration
CACHE_TTL=3600
REDIS_KEY_PREFIX=echomail:

# Feature Flags
ENABLE_TEAM_MANAGEMENT=true
ENABLE_USAGE_ANALYTICS=true
ENABLE_INVOICE_GENERATION=true
ENABLE_AUTO_COMPANY_REGISTRATION=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Performance
MAX_CONCURRENT_EMAILS=50
MAX_CONCURRENT_NOTIFICATIONS=100

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000
NOTIFICATION_BATCH_SIZE=100

# Company Registration
AUTO_REGISTRATION_THRESHOLD=3
AUTO_REGISTRATION_CONFIDENCE_SCORE=0.8

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000