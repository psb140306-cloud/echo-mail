# =============================================================================
# Echo Mail 환경변수 설정 예시
# 이 파일을 .env.local로 복사하고 실제 값으로 변경하세요
# =============================================================================

# -----------------------------------------------------------------------------
# 애플리케이션 기본 설정
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME="Echo Mail"
APP_URL=http://localhost:3000
PORT=3000

# -----------------------------------------------------------------------------
# 데이터베이스 설정
# -----------------------------------------------------------------------------
# PostgreSQL 연결 URL
DATABASE_URL="postgresql://username:password@localhost:5432/echomail"

# 데이터베이스 풀 설정
DB_POOL_MIN=2
DB_POOL_MAX=10

# -----------------------------------------------------------------------------
# Redis 설정 (캐시 및 세션 관리)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# -----------------------------------------------------------------------------
# 메일 서버 설정 (IMAP)
# -----------------------------------------------------------------------------
# 메일 서버 정보
MAIL_HOST="imap.gmail.com"
MAIL_PORT=993
MAIL_SECURE=true

# 메일 계정 인증
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"

# 메일 모니터링 설정
MAIL_CHECK_INTERVAL=30000  # 30초마다 체크
MAIL_IDLE_TIMEOUT=300000   # 5분 IDLE 타임아웃

# -----------------------------------------------------------------------------
# SMS API 설정
# -----------------------------------------------------------------------------
# SMS 서비스 제공업체 선택 (aligo, solutionlink, ncp)
SMS_PROVIDER="aligo"

# 알리고 SMS API
ALIGO_API_KEY="your-aligo-api-key"
ALIGO_USER_ID="your-aligo-user-id"
ALIGO_SENDER="010-1234-5678"

# 솔루션링크 SMS API
SOLUTIONLINK_API_KEY="your-solutionlink-api-key"
SOLUTIONLINK_API_SECRET="your-solutionlink-api-secret"
SOLUTIONLINK_SENDER="010-1234-5678"

# NCP SMS API
NCP_ACCESS_KEY="your-ncp-access-key"
NCP_SECRET_KEY="your-ncp-secret-key"
NCP_SERVICE_ID="your-ncp-service-id"
NCP_SENDER="010-1234-5678"

# -----------------------------------------------------------------------------
# 카카오톡 비즈메시지 API 설정
# -----------------------------------------------------------------------------
KAKAO_API_KEY="your-kakao-api-key"
KAKAO_API_SECRET="your-kakao-api-secret"
KAKAO_SENDER_KEY="your-sender-key"

# 알림톡 템플릿 ID
KAKAO_TEMPLATE_ORDER_RECEIVED="ORDER_RECEIVED_001"
KAKAO_TEMPLATE_DELIVERY_NOTICE="DELIVERY_NOTICE_001"

# 친구톡 설정
KAKAO_PLUS_FRIEND_ID="@your-plus-friend-id"

# -----------------------------------------------------------------------------
# 공휴일 API 설정
# -----------------------------------------------------------------------------
# 한국 공공데이터 포털 API
HOLIDAY_API_KEY="your-holiday-api-key"
HOLIDAY_API_URL="http://apis.data.go.kr/B090041/openapi/service/SpcdeInfoService"

# -----------------------------------------------------------------------------
# 보안 설정
# -----------------------------------------------------------------------------
# JWT 시크릿 키 (랜덤 문자열로 생성)
JWT_SECRET="your-very-long-random-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# NextAuth.js 설정
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-32-chars-minimum"

# 세션 시크릿
SESSION_SECRET="your-session-secret-key"

# 암호화 키 (개인정보 암호화용)
ENCRYPTION_KEY="your-32-character-encryption-key"

# -----------------------------------------------------------------------------
# 로깅 및 모니터링
# -----------------------------------------------------------------------------
# 로그 레벨 (error, warn, info, debug)
LOG_LEVEL=info

# Sentry 에러 추적 (선택사항)
SENTRY_DSN="your-sentry-dsn"

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# 알림 발송 제한 설정
# -----------------------------------------------------------------------------
# SMS 발송 제한 (분당 발송 수)
SMS_RATE_LIMIT=100

# 카카오톡 발송 제한 (분당 발송 수)
KAKAO_RATE_LIMIT=200

# 재시도 설정
NOTIFICATION_RETRY_COUNT=3
NOTIFICATION_RETRY_DELAY=5000  # 5초

# -----------------------------------------------------------------------------
# 파일 업로드 설정
# -----------------------------------------------------------------------------
# 업로드 디렉토리
UPLOAD_DIR="./uploads"

# 파일 크기 제한 (바이트)
MAX_FILE_SIZE=10485760  # 10MB

# 허용 파일 확장자
ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,hwp"

# -----------------------------------------------------------------------------
# 개발/테스트 설정
# -----------------------------------------------------------------------------
# 테스트 환경에서 실제 알림 발송 여부
ENABLE_REAL_NOTIFICATIONS=false

# 개발 모드에서 메일 모니터링 활성화 여부
ENABLE_MAIL_MONITORING=false

# 더미 데이터 사용 여부
USE_MOCK_DATA=true

# -----------------------------------------------------------------------------
# MCP 서버 설정
# -----------------------------------------------------------------------------
# GitHub MCP
GITHUB_TOKEN="your-github-token"
GITHUB_REPO_OWNER="your-username"
GITHUB_REPO_NAME="echo-mail"

# Context7 MCP
CONTEXT7_API_KEY="your-context7-api-key"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
SUPABASE_PROJECT_REF="your-supabase-project-ref"

# Vercel MCP
VERCEL_TOKEN="your-vercel-token"
VERCEL_TEAM_ID="your-team-id"
VERCEL_PROJECT_ID="your-project-id"
VERCEL_ORG_ID="your-org-id"

# shadcn MCP
SHADCN_REGISTRY_URL="https://ui.shadcn.com/registry"
SHADCN_COMPONENTS_PATH="./components/ui"
SHADCN_UTILS_PATH="./lib/utils"

# -----------------------------------------------------------------------------
# CORS 설정
# -----------------------------------------------------------------------------
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS=true